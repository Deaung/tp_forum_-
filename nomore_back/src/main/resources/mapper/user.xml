<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.nomoreback.domain.user.UserMapper">

    <resultMap id="UserMap" type="com.korit.nomoreback.domain.user.User">
        <id property="userId" column="user_id" />
        <result property="nickName" column="nick_name" />
        <result property="fullName" column="full_name" />
        <result property="birthDate" column="birth_date" />
        <result property="email" column="email" />
        <result property="profileImgPath" column="profile_img_path" />
        <result property="introduction" column="introduction" />
        <result property="gender" column="gender" />
        <result property="categoryId" column="category_id" />
        <result property="provider" column="provider" />
        <result property="providerId" column="provider_id" />
    </resultMap>
    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        insert into user_tb
        values (default, #{nickName}, #{fullName}, #{birthDate},
        #{email}, #{profileImgPath}, #{introduction}, #{gender}, #{categoryId}, #{provider},#{providerId},
        #{age})
    </insert>

    <select id="findByProviderId" resultType="com.korit.nomoreback.domain.user.User">
        select
            *
        from
            user_tb
        where
            provider_id = #{providerId}
    </select>
    <select id="findById" resultType="com.korit.nomoreback.domain.user.User">
        select
            ut.user_id
            ut.nick_name
            ut.full_name
            ut.birth_date
            ut.email
            ut.profile_img_path
            ut.introduction
            ut.gender
            ut.category_id
            ut.provider
            ut.provider_id
        from
            user_tb ut
        where
            ut.user_id = #{userId}
    </select>
</mapper>